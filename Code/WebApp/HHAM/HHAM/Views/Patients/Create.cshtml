@model HHAM.Models.Patient

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:20px;">
    <div class="col-3"></div>
    <div class="col-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <h4>Create Patient</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName)
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Weight)
                @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Height)
                @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DateAdmited)
                @Html.EditorFor(model => model.DateAdmited, new { htmlAttributes = new { @class = "form-control"} })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                @Html.ValidationMessageFor(model => model.DateAdmited, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DateReleased)
                @Html.EditorFor(model => model.DateReleased, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateReleased, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Notes)
                @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", rows = "", cols = "", style = "width: 100%; height: 100px;" })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
            <hr />
            <div class="form-group">
                <div style="text-align:left">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        }

        <div style="text-align:left">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
        </div>

    </div>
    <div class="col-3"></div>

</div>
@section scripts{
    <script>
        @Scripts.Render("~/bundles/jqueryval")
        $(document).ready(function () {
            $('input[name="DateAdmited"]').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true
            });

            $('input[name="DateReleased"]').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true
            });
        });
    </script>

}