@model HHAM.ViewModels.ManageIndexViewModel
@{
    ViewBag.Title = "Manage";
}
<p class="text-success">@ViewBag.StatusMessage</p>
<style>
    .card {
        width: 21rem;
        margin-top: 10px;
    }

    .card-header {
        height: 50px;
    }
</style>
<div class="container">
    <h2>Settings</h2>
    <hr />
    <div class="row">
        <div class="col-4">

            <div class="card">
                <img class="card-img-top" src="@Model.CareGiverUserProfile.UrlProfilePicture" alt="Card image cap">
                <div class="card-body">
                    <a href="#" class="btn btn-primary">Change Profile Picture</a>

                </div>
            </div>

        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        @Html.LabelFor(model => model.CareGiverUserProfile.FirstName)
                    </h5>
                </div>
                <div class="card-body text-primary">

                    <div class="form-group">
                        <input class="form-control text-box single-line" id="FirstNameValue" name="" type="text" value="@Model.CareGiverUserProfile.FirstName">
                    </div>
                    <a id="saveFirstName" class="btn btn-default">Save</a>

                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        @Html.LabelFor(model => model.CareGiverUserProfile.LastName)
                    </h5>
                </div>
                <div class="card-body">
                   
                        <div class="form-group">

                            @Html.EditorFor(model => model.CareGiverUserProfile.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CareGiverUserProfile.LastName, "", new { @class = "text-danger" })

                        </div>
                        <button type="submit" class="btn btn-default">Save</button>

                </div>
            </div>



        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        @Html.LabelFor(model => model.CareGiverUserProfile.Description)
                    </h5>
                </div>
                <div class="card-body">

                        <div class="form-group">
                            @Html.TextAreaFor(model => model.CareGiverUserProfile.Description, new { @class = "form-control", rows = "", cols = "", style = "width: 100%; height: 100px;" })
                            @Html.ValidationMessageFor(model => model.CareGiverUserProfile.Description, "", new { @class = "text-danger" })

                        </div>
                        <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
            <div class="card">
                <div class="card-header"><h5>@Html.LabelFor(model => model.CareGiverUserProfile.Role)</h5></div>
                <div class="card-body">
                    <p>@Model.CareGiverUserProfile.Role</p>
                </div>
            </div>
            <div class="card text-center">
                <div class="card-body">
                    Password:
                    [
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Change your password", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </div>
            </div>
        </div>

    </div>
    <hr />

</div>
@section scripts{
    <script>
        $("#saveFirstName").click(function () {
            var name = $("#FirstNameValue").val();
            var user = {
                FirstName: name
            };  
            $.ajax({
                method: "POST",
                dataType: "json",
                url: "/api/UserProfile/ChangeFirstName",
                data: user
            });
        });

    </script>
}