@model HHAM.ViewModels.CreateScanViewModel


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:20px;">
    <div class="col-3"></div>
    <div class="col-6">
        @using (Html.BeginForm("Create", "Scans", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create Scan</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", rows = "", cols = "", style = "width: 100%; height: 100px;" })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label" for="file">RAW File</label>
                <input type="file" name="file" id="file" class="form-control"/>
            </div>

            <div class="form-group">
                <div style="text-align:left">
                    <input type="submit" value="Create" class="btn btn-success" id="createButton"/>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", new { PatientId = Model.PatientNumber }, new { @class = "btn btn-primary" })
        </div>
    </div>
    <div class="col-3"></div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
